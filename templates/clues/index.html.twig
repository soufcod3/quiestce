{% extends 'base.html.twig' %}

{% block title %}Clues index{% endblock %}

{% block body %}
    <h1>Clues index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clue in clues %}
            <tr>
                <td>{{ clue.id }}</td>
                <td>{{ clue.description }}</td>
                <td>
                    <a href="{{ path('clues_show', {'id': clue.id}) }}">show</a>
                    <a href="{{ path('clues_edit', {'id': clue.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clues_new') }}">Create new</a>
{% endblock %}
