{% extends "base.html.twig" %}

{% block title %}A toi de jouer !{% endblock %}

{% block body %}
<section class="play-index">
    <div class="logo">
        <a href="/">
            <img src="{{ asset('build/images/logo.png') }}" alt="Logo du jeu">
        </a>
    </div>
    <div class="score">
        <h3>{{ score }}</h3>
    </div>
    <div class="portrait">
        {% block portrait %}
        <img src="{{ asset('build/images/mystery.png') }}" alt ="La/le wilder mystère">
        {% endblock portrait %}

    </div>

    <div class="bubble">
        {% block bubble %}{% endblock bubble %}
    </div>

    {% block replay %}{% endblock replay %}

    {% block choices %}
    <div class="choices">
        <div class="container">
            <div class="questions">
                {% for question in wilder.questions %}
                <a href="{{ path('answer', {'question': question.id})}}">
                    <button class="question">{{ question.title }}</button>
                </a>
                {% endfor %}
            </div>
            <div class="clues">
                {% for clue in wilder.clues %}
                <a href="{{ path('clue', {'clue': clue.id})}}">
                    <button class="clue">Indice {{ loop.index }}</button>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endblock choices %}

    {% block input %}
    <div class="input">
        <form action="" method="post">
            <input id="inputAnswer" type="text" name="answer" placeholder="Entre ta réponse ici" required>
            <input id="go" type="submit" value="GO">
        </form>
        <a href="/play">
            <div class="reload">
                <i class="fas fa-retweet"></i>
            </div>
        </a>
    </div>
    {% endblock input %}


</section>
{% endblock body %}